<form enctype="multipart/form-data" method="POST" class="mt-5">
    <div class="form-group">
        <label for="inputTitle">Заголовок</label>
        <input type="text"
               value="<%= books.title %>"
               name="title"
               class="form-control"
               id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputDescription">Описание</label>
        <textarea
                rows="3"
                name="description"
                class="form-control"
                id="inputDescription"
        ><%= books.description %></textarea>
    </div>
    <div class="form-group">
        <label for="inputAuthor">Автор</label>
        <input
                name="authors"
                class="form-control"
                id="inputAuthor"
                value="<%= books.authors %>">
    </div>
    <div class="form-group">
        <label for="inputfavorite">Избранное</label>
        <input
                name="favorite"
                class="form-control"
                id="inputfavorite"
                value="<%= books.favorite %>">
    </div>
    <div class="form-group">
        <label for="inputfileCover">Обложка</label>
        <input
                name="fileCover"
                class="form-control"
                id="inputfileCover"
                value="<%= books.fileCover %>">
    </div>
    <div class="form-group">
        <label for="inputfileName">Имя файла</label>
        <input
                name="fileName"
                class="form-control"
                id="inputfileName"
                value="<%= books.fileName %>">
    </div>
    <div class="form-group mb-3">
        <label for="formFile" class="form-label">Загрузить книгу</label>
        <input
                type="file"
                name="fileBook"
                class="form-control-file"
                id="formFile"
                value="<%= books.fileBook %>">
    </div>
    <div class="form-group text-right ">
        <button type="submit" class="btn btn-primary">Сохранить</button>
    </div>
</form>